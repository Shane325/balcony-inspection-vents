<% js.forEach(function(src){ %>
    <script src="<%=src %>"></script>
    <% }) %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.2.2/jquery.form.min.js" integrity="sha384-FzT3vTVGXqf7wRfy8k4BiyzvbNfeYjK+frTVqZeNDFl8woCbF0CYG6g2fMEFFo/i" crossorigin="anonymous"></script>
        <script>
            // prepare the form when the DOM is ready 
            $(document).ready(function()
            {
              var $contactForm = $('.contact-widget:not(.customjs)');
              $contactForm.each(function () {
                var element = $(this);
                var elementResult = element.find('.contact-form-result')

                var options = {
                    target: elementResult, // target element(s) to be updated with server response 
                    dataType: 'json',
                    success: function(data) {
                      elementResult.removeClass('alert-danger alert-success').addClass('alert alert-success').html(data.message).slideDown(400);
                    }, // post-submit callback 
                    clearForm: true, // clear all form fields after successful submit 
                    resetForm: true // reset the form after successful submit 
                };
                // bind form using 'ajaxForm' 
                $('#contactform').submit(function () {
                  $(this).ajaxSubmit(options)
                    gtag_report_conversion();
                    ga('send', 'event', 'Form', 'submit', 'old site');
                    console.log('Button Pressed');
                  return false;
                });
              }) 
            });
        </script>
