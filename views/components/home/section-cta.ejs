<section class="bg-primary padding-top-40 padding-bottom-40">
    <div class="container">
        <div class="row margin-top-20">
            <div class="col-lg-12 text-center text-white">
                <h2 class="mb-4">Want to place an order?</h2>
            </div>
        </div>
        <form id="contactform" name="template-contactform" action="/contact/send-email"
        method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-12">
                    <label class="sr-only" for="firstName">Name</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                </div>
                <div class="form-group col-lg-6 col-md-12">
                    <label class="sr-only" for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email" required>
                </div>
                <div class="form-group col-lg-12">
                    <label class="sr-only" for="message">Message</label>
                    <textarea type="text" class="form-control" name="message" id="message" placeholder="Message" rows="6" required></textarea>
                </div>
                <button name="submit" type="submit" class="btn btn-lg btn-light sr-button">Submit</button>
            </div>
        </form>
        <br/>
        <p class="text-white font-size-12"><em>100% privacy guaranteed.</em></p>
    </div>
</section>
